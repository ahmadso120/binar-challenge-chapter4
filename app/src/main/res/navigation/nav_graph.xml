<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.sopian.challenge4.ui.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_noteEntryDialogFragment"
            app:destination="@id/noteEntryDialogFragment" />
        <action
            android:id="@+id/action_homeFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <dialog
        android:id="@+id/noteEntryDialogFragment"
        android:name="com.sopian.challenge4.ui.NoteEntryDialogFragment"
        android:label="NoteEntryDialogFragment"
        tools:layout="@layout/note_entry_dialog">
        <argument
            android:name="itemId"
            app:argType="integer"
            android:defaultValue="-1" />
    </dialog>

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.sopian.challenge4.ui.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.sopian.challenge4.ui.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register" >
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/registerFragment"
            app:popUpToInclusive="true"/>
    </fragment>

    <action
        android:id="@+id/action_global_homeFragment"
        app:destination="@+id/homeFragment" />

    <action
        android:id="@+id/action_global_loginFragment"
        app:destination="@+id/loginFragment" />
</navigation>